<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE configuration
	PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>

	<!-- type에 지정된 some.package.name.ClassName을 alias에 지정된 이름으로 대체하는 설정 -->
	<typeAliases>
		<typeAlias type="com.gamsung.vo.Member" alias="Member" />
		<typeAlias type="com.gamsung.vo.Upload" alias="Upload" />
		<typeAlias type="com.gamsung.vo.UploadFile" alias="UploadFile" />
		<typeAlias type="com.gamsung.vo.UploadComment" alias="UploadComment" />
	</typeAliases>
	
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="net.sf.log4jdbc.sql.jdbcapi.DriverSpy" />
				<property name="url" value="jdbc:mysql://211.197.18.246:3306/gamsung?serverTimezone=UTC" />
				<property name="username" value="market" />
				<property name="password" value="market" />
			</dataSource>
		</environment>		
	</environments>
	
	<!-- SQL + Object Mapping Configuration -->
	<mappers>
		<mapper resource="com/gamsung/mapper/member-mapper.xml" />
		<mapper resource="com/gamsung/mapper/mariadb-upload-mapper.xml" />
	</mappers>
	
</configuration>